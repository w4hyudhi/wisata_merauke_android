<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:contentDescription="tps"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:src="@color/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_data1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/subtitle"
            android:textSize="20sp"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="nama tps"

            tools:textStyle="bold" />

        <TextView
            android:id="@+id/txt_data2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_data1"

            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:drawablePadding="10dp"
            android:textColor="@color/subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_view"
            app:layout_constraintTop_toBottomOf="@+id/txt_data1"
            tools:text="jarak" />


        <TextView
            android:id="@+id/txt_data3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_data1"
            android:layout_marginStart="8dp"

            android:drawablePadding="10dp"
            android:maxLines="3"
            android:textColor="@color/subtitle"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_view"


            app:layout_constraintTop_toBottomOf="@+id/txt_data2"
            tools:text="kondisi" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>